<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.dannis.cms.dal.db.CarTypeMapper">
    <resultMap id="carTypeMap" type="org.dannis.cms.dal.entity.CarTypeEntity">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="englishName" column="english_name" jdbcType="VARCHAR"/>
        <result property="createdOn" column="created_on" jdbcType="TIMESTAMP"/>
        <result property="createdBy" column="created_by" jdbcType="INTEGER"/>
        <result property="lastModifiedOn" column="last_modified_on" jdbcType="TIMESTAMP"/>
        <result property="lastModifiedBy" column="last_modified_by" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="allColumns">
        id,name,english_name,created_on,created_by,last_modified_on,last_modified_by
    </sql>

    <insert id="save" parameterType="org.dannis.cms.dal.entity.CarTypeEntity">
        INSERT INTO t_cms_car_type(name,english_name,created_by,created_on)
        VALUES (#{name},#{englishName},#{createdBy},now())
    </insert>

    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM t_cms_car_type
        WHERE id = #{id}
    </delete>

    <update id="update" parameterType="org.dannis.cms.dal.entity.CarTypeEntity">
        UPDATE t_cms_car_type
        SET name=#{name},english_name=#{englishName},last_modified_by=#{lastModifiedBy}
        WHERE id = #{id}
    </update>

    <select id="query" resultMap="carTypeMap">
        SELECT
        <include refid="allColumns"/>
        FROM t_cms_car_type
        WHERE id=#{id}
    </select>

    <select id="queryByPage" resultMap="carTypeMap">
        SELECT
        <include refid="allColumns"/>
        FROM t_cms_car_type
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name = #{name}
        </if>
        LIMIT #{offset},#{limit}
    </select>

    <select id="queryTotal" resultType="java.lang.Long">
        SELECT count(id)
        FROM t_cms_car_type
        WHERE 1=1
        <if test="name != null and name != ''">
            AND name = #{name}
        </if>
    </select>
</mapper>